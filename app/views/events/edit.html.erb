<h1>Edit Event</h1>

<div class="row">
  <div class="col-md-8">
    <%= form_with(model: @event, url: event_path(@event), method: :patch, class: 'needs-validation', novalidate: true) do |form| %>
      <% if @event.errors.any? %>
        <div class="alert alert-danger">
          <h4><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h4>
          <ul>
            <% @event.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-3">
        <%= form.label :name, class: 'form-label' %>
        <%= form.text_field :name, class: 'form-control', required: true %>
      </div>

      <div class="mb-3">
        <%= form.label :description, class: 'form-label' %>
        <%= form.text_area :description, class: 'form-control', required: true %>
      </div>

      <div class="mb-3">
        <%= form.label :location, class: 'form-label' %>
        <%= form.text_field :location, class: 'form-control', required: true %>
      </div>

      <div class="mb-3">
        <%= form.label :event_at, "Event Date and Time", class: 'form-label' %>
        <%= form.datetime_local_field :event_at, class: 'form-control', required: true %>
      </div>

      <div class="mb-3">
        <%= form.label :total_tickets, class: 'form-label' %>
        <%= form.number_field :total_tickets, class: 'form-control', required: true %>
      </div>

      <div class="mb-3">
        <%= form.submit "Update Event", class: 'btn btn-primary' %>
        <%= link_to 'Back to Event', event_path(@event), class: 'btn btn-secondary' %>
      </div>
    <% end %>
  </div>
</div>
