<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h1><%= @event.name %></h1>

      <p><strong>Description:</strong> <%= @event.description %></p>
      <p><strong>Location:</strong> <%= @event.location %></p>
      <p><strong>Event Date:</strong> <%= @event.event_at&.strftime("%B %d, %Y") %></p>
      <p><strong>Total Tickets:</strong> <%= @event.total_tickets %></p>
      <p><strong>Available Tickets:</strong> <%= @event.available_tickets %></p>

      <% if user_signed_in? && @event.user == current_user %>
        <p><%= link_to 'Edit', edit_event_path(@event), class: 'btn btn-primary' %></p>
      <% end %>

      <% if @event.available_tickets > 0 %>
        <%= link_to 'Book Tickets', new_events_event_ticket_path(event_id: @event.id), class: 'btn btn-success' %>
      <% else %>
        <p>No tickets available for booking.</p>
      <% end %>
    </div>
  </div>
</div>
